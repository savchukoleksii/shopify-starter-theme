{
  "name": "themeplify-theme",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": ">=14.17.0",
    "npm": "use yarn!",
    "yarn": ">=1.0.0"
  },
  "scripts": {
    "lint:liquid": "builder build && cross-env SHOPIFY_CLI_STACKTRACE=1 shopify theme check --path=./src --config=.theme-check.yml --auto-correct || exit 0",
    "lint:js": "prettier --write \"./src/scripts/**/*.js\" && eslint \"./src/scripts/**/*.js\" --fix -c .eslintrc || exit 0",
    "scss:lint": "prettier --write \"./src/styles/**/*.scss\" && stylelint --fix --config ./stylelint.config.js --custom-syntax postcss-scss \"./src/styles/**/*.scss\" || exit 0",
    "sass:lint": "prettier --write \"./src/styles/**/*.sass\" && stylelint --fix --config ./stylelint.config.js --custom-syntax postcss-sass \"./src/styles/**/*.sass\" || exit 0",
    "svg:lint": "svgo --config=svgo.config.js ./src/icons/ && prettier --write ./src/icons/*.svg --parser html || exit 0",
    "eclint:fix": "eclint fix ./src/snippets/*.html ./src/icons/*.svg ./src/**/*.json !./src/**/*.css.liquid !./src/**/*.js.liquid || exit 0",
    "eclint:check": "eclint check ./src/snippets/*.html ./src/icons/*.svg ./src/**/*.json !./src/**/*.scss.liquid !./src/**/*.js.liquid || exit 0",
    "lint": "npm run lint:js && npm run scss:lint && npm run svg:lint && npm run eclint:fix && npm run lint:liquid",
    "build": "cross-env NODE_OPTIONS=--trace-deprecation builder build",
    "deploy": "cross-env NODE_OPTIONS=--trace-deprecation builder deploy",
    "start": "cross-env NODE_OPTIONS=--trace-deprecation builder start",
    "watch": "cross-env BUNDLE_ANALIZER=1 NODE_OPTIONS=--trace-deprecation builder watch",
    "download": "cross-env NODE_OPTIONS=--trace-deprecation builder download",
    "zip": "cross-env NODE_OPTIONS=--trace-deprecation builder zip",
    "server": "cross-env NODE_OPTIONS=--trace-deprecation builder server",
    "postinstall": "husky install && yarn copy .husky/**/* .git/hooks"
  },
  "author": "Oleksii Savchuk <savchukoleksii@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@shopify/theme-currency": "^4.0.2",
    "@shopify/theme-images": "^4.1.0",
    "@shopify/theme-product": "^4.1.0",
    "@shopify/theme-product-form": "^4.1.0",
    "@shopify/theme-sections": "^4.0.2",
    "axios": "^1.2.1",
    "body-scroll-lock": "^4.0.0-beta.0",
    "cross-env": "^7.0.3",
    "form-serialize": "^0.7.2",
    "jquery": "^3.6.1",
    "vue": "^3.2.36",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@savchukoleksii/builder": "^1.0.15",
    "@shopify/cli": "^3.25.0",
    "@shopify/theme": "^3.25.0",
    "@vue/compiler-sfc": "^3.2.45",
    "copy": "^0.3.2",
    "eclint": "^2.8.1",
    "eslint": "^8.29.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fibers": "^5.0.3",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "postcss-sass": "^0.5.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.1",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-recommended-scss": "^8.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "svgo": "^3.0.2",
    "terser-webpack-plugin": "^5.3.6",
    "vue-loader": "^17.0.1",
    "vue-svg-loader": "^0.16.0",
    "vue-template-compiler": "^2.7.14",
    "webpack-bundle-analyzer": "^4.7.0"
  }
}
